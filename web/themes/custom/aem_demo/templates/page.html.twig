{#
  Very small tweak of Olivero page template.
  We keep all core regions; we just inject the hero banner above content.
#}
<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
  </head>
  <body{{ attributes }}>
    {{ page_top }}
    {{ page.header }}

    <main role="main">
      <a id="main-content" tabindex="-1"></a>

      {# AEM-style hero banner #}
      <section class="aem-hero">
        <div class="aem-hero-kicker">DRUPAL 10 Ã— AEM-STYLE UX</div>
        <div class="aem-hero-title">
          Component-led demo layout
        </div>
        <p class="aem-hero-subtitle">
          Clean Twig + CSS showing how Drupal content can drive AEM-like components.
          Decoupled-ready, editorial-friendly, and easy to explain in an interview.
        </p>
      </section>

      {# Normal Drupal content region #}
      {% if page.content %}
        <div class="layout-content">
          {{ page.content }}
        </div>
      {% endif %}
    </main>

    {{ page.footer }}
    {{ page_bottom }}
    <js-bottom-placeholder token="{{ placeholder_token }}">
  </body>
</html>
